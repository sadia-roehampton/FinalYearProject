@page
@model FYP_Appointment_Management.Pages.Departments.IndexModel

@{
    ViewData["Title"] = "Departments";
}

<h1>Department List</h1>

<p>
    <a asp-page="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Department[0].Dept_Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Department[0].Dept_phone)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model.Department) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Dept_Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Dept_phone)
            </td>
            <td>
                <a asp-page="./Edit" asp-route-id="@item.Dept_Id">Edit</a> |
                <a asp-page="./Details" asp-route-id="@item.Dept_Id">Details</a> |
                <a asp-page="./Delete" asp-route-id="@item.Dept_Id">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
