@page
@{
    ViewData["Title"] = "Forgot Password?";
}
@* <h1>@ViewData["Title"]</h1>
 *@
<div class="text-left" style="margin-top: 150px;">
    <h2 class="display-4">Forgot Password?</h2>
</div>
<section>
    <form method="post" action="">
        <label for="yourEmail">Please enter your Email:</label>
        <input style="margin-left:1%" type="text" id="staffUsername" name="staffUsername">
        <br>
        <a asp-area="" asp-page="/reset-password" class="btn btn-secondary">Submit</a>
    </form>
</section>