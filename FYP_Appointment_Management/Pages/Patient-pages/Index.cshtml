@page
@model FYP_Appointment_Management.Pages.Patient_pages.IndexModel

@{
    ViewData["Title"] = "My Appointments";
}

<div style="display: flex; align-items: center; margin-right: 10%; justify-content: left;">
    <h1>@ViewData["Title"]</h1>
    <div style="display: flex; margin-left: 5%;">
        <a asp-area="" asp-page="/Patient-pages/patient-login" class="btn btn-light"> Home</a>
    </div>
    <div style="display: flex; margin-left: 2%;">
        <a asp-area="" asp-page="/Patient-pages/my-account" class=" btn btn-light">Account</a>
    </div>
    <div style="display: flex; margin-left: 2%;">
        <a asp-area="" asp-page="/Logout-page" class="btn btn-light">Logout</a>
    </div>
</div>

<p>
    <a asp-page="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Patients_appointments[0].Date)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Patients_appointments[0].Time)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Patients_appointments[0].Doctor_Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Patients_appointments[0].Status)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Patients_appointments[0].Actions)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var Patient_appointments in Model.Patients_appointments)
        {
        <tr>
            <td>
                    @Html.DisplayFor(modelItem => Patient_appointments.Date)
            </td>
            <td>
                    @Html.DisplayFor(modelItem => Patient_appointments.Time)
            </td>
            <td>
                    @Html.DisplayFor(modelItem => Patient_appointments.Doctor_Name)
            </td>
            <td>
                    @Html.DisplayFor(modelItem => Patient_appointments.Status)
            </td>
            <td>
                    @Html.DisplayFor(modelItem => Patient_appointments.Actions)
            </td>
            <td>
                    <a asp-page="./Edit" asp-route-id="@Patient_appointments.Id">Edit</a> |
                    <a asp-page="./Details" asp-route-id="@Patient_appointments.Id">Details</a> |
                    <a asp-page="./Delete" asp-route-id="@Patient_appointments.Id">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
