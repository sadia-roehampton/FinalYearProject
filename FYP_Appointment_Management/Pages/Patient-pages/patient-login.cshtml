@page
@model HomeController
@{
    ViewData["Title"] = "Welcome Patient!";
}
<h1>@ViewData["Title"]</h1>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Welcome Patient!</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/FYP_Appointment_Management.styles.css" asp-append-version="true" />
</head>
<body>
    <header class="bg-light-blue">
        <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-light bg-light-blue border-bottom box-shadow mb-3">
            <div class="container">
                @* <a class="navbar-brand" asp-area="" asp-page="/Index">Appointment Management</a> *@
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                        aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="navbar-collapse collapse d-sm-inline-flex justify-content-between">
                    <ul class="navbar-nav flex-grow-1">
                        <li class="nav-item" style="margin-right: 20px;">
                            <a class="nav-link text-dark; bg-light" asp-area="" asp-page="">Home</a>
                        </li>
                        <li class="nav-item" style="margin-right: 20px;">
                            <a class="nav-link text-dark; bg-light" asp-area="" asp-page="/Index">My Appointments</a>
                        </li>
                        <li class="nav-item" style="margin-right: 20px;">
                            <a class="nav-link text-dark; bg-light" asp-area="" asp-page="/Patient-pages/my-account">Account</a>
                        </li>
                        <li class="nav-item" style="margin-right: 20px;">
                            <a class="nav-link text-dark; bg-light" asp-area="" asp-page="/Logout-page">Logout</a>
                        </li>
                    </ul>
                </div>
            </div>
        </nav>
    </header>

</body>
</html>